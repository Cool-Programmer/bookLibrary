<h1>Authors</h1>
<table class="table table-hover table-striped">
	<tr>
		<th>Publisher</th>
		<th>Actions</th>
	</tr>
	<% @publishers.each do |publisher| %>
		<tr>
			<td><%= link_to publisher.name, publisher_path(publisher) %></td>
			<td>
				<%= link_to 'Edit', edit_publisher_path(publisher.id) %> | <%= link_to 'Delete', publisher_path(publisher), method: :delete, data:{confirm: 'Are you sure you want to delete this publisher?'} %>
			</td>
		</tr>
	<% end %>
</table>