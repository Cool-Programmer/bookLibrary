<h1>Authors</h1>
<table class="table table-hover table-striped">
	<tr>
		<th>Author</th>
		<th>Actions</th>
	</tr>
	<% @authors.each do |author| %>
		<tr>
			<td><%= link_to author.first_name + ' ' + author.last_name, author_path(author) %></td>
			<td>
				<%= link_to 'Edit', edit_author_path(author.id) %> | <%= link_to 'Delete', author_path(author), method: :delete, data:{confirm: 'Are you sure you want to delete this author?'} %>
			</td>
		</tr>
	<% end %>
</table>