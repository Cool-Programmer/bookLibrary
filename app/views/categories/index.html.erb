<h1>Categories</h1>
<table class="table table-hover table-striped">
	<tr>
		<th>Category name</th>
		<th>Actions</th>
	</tr>
	<% @categories.each do |cat| %>
		<tr>
			<td><%= cat.name %></td>
			<td>
				<%= link_to 'Edit', edit_category_path(cat.id) %> | <%= link_to 'Delete', category_path(cat), method: :delete, data:{confirm: 'Are you sure you want to delete this category?'} %>
			</td>
		</tr>
	<% end %>
</table>