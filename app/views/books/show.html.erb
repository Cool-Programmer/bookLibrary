<div id="books-show">
	<h2><%= @book.title %></h2>
	<div class="books-show-left">
		<%= image_tag(@book.coverpath, class: 'img-responsive thumbnail') %>

	</div>
	<div class="books-show-right">
		<h3>Book info</h3>
		<ul class="list-unstyled">
			<li><strong>Catgory: </strong> <%= @book.category.name %></li>
			<li><strong>Author: </strong> <%= @book.author.first_name + ' ' + @book.author.last_name %></li>
			<li><strong>Year: </strong><%= @book.year %></li>
			<li><strong>Publisher: </strong><%= @book.publisher.name %></li>
			<li><strong>ISBN: </strong><%= @book.isbn %></li>
			<li><strong>Format: </strong><%= @book.format %></li>
		</ul>
		<%= link_to 'Buy Now For ' + @book.price + '$', @book.buy, target: '_blank', class: 'btn btn-success' %>
	</div>
	<div class="clearfix"></div>
	<hr>
	<h4>Description</h4>
	<p>
		<%= @book.description %>
	</p>

	<h3>Admin functions</h3>
	<%= link_to 'Edit', edit_book_path(@book.id) %> | 
	<%= link_to 'Delete', book_path(@book), method: :delete, data:{confirm: 'Are you sure you want to delete this record?'} %>
</div>