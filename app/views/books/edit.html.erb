<h2>Edit Book</h2>
<%= form_for @book do |f| %>

	<% if @book.errors.any? %>
		<div class="aler alert-danger">
			<% @book.errors.full_messages.each do |msg| %>
				<ul><li><%= msg %></li></ul>
			<% end %>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class:'form-control', placeholder: 'e.g. Jane Eyre' %>
	</div>

	<div class="form-group">
		<%= f.label :isbn %>
		<%= f.text_field :isbn, class: 'form-control', placeholder: 'e.g. 978-3-16-148410-0' %>
	</div>

	<div class="form-group">
		<%= f.label :category %>
		<%= f.select :category_id, Category.all.collect{|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :author %>
		<%= f.select :author_id, Author.all.collect{|x| [x.first_name + ' ' + x.last_name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :publisher %>
		<%= f.select :publisher_id, Publisher.all.collect{|x| [x.name, x.id]}, {:include_blank => 'Select One'}, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :coverpath %>
		<%= f.text_field :coverpath, class: 'form-control', placeholder: 'A path to image' %>
	</div>

	<div class="form-group">
		<%= f.label :format %>
		<%= f.text_field :format, class: 'form-control', placeholder: 'e.g. paperback, hardcover' %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control', placeholder: 'Short description' %>
	</div>

	<div class="form-group">
		<%= f.label :pages %>
		<%= f.number_field :pages, class: 'form-control', placeholder: 'The number of pages' %>
	</div>

	<div class="form-group">
		<%= f.label :price %>
		<%= f.text_field :price, class: 'form-control', placeholder: 'The actual price (without $)' %>
	</div>

	<div class="form-group">
		<%= f.label :year %>
		<%= f.text_field :year, class: 'form-control', placeholder: 'The year published' %>
	</div>

	<div class="form-group">
		<%= f.label :buy %>
		<%= f.text_field :buy, class: 'form-control', placeholder: 'A link to buy (e.g. ebay, amazon...)' %>
	</div>

	<%= f.submit "Update", class: 'btn btn-primary' %>
	<%= link_to 'Cancel', books_path, class: 'btn btn-danger' %>	

<% end %>