<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= @page_title ? @page_title : ' Welcome' ' | Bookstore' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= params[:controller] == 'books' && params[:action] == 'index' ? 'active' : '' %>"><%= link_to 'Home', root_path %></li>
            <li class="<%= params[:controller] == 'about' ? 'active' : '' %>"><%= link_to 'About us', about_path %></li>
            <li class="dropdown">
            	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Add new <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Book', books_path + '/new' %></li>
                <li><%= link_to 'Category', categories_path + '/new' %></li>
                <li><%= link_to 'Author', authors_path + '/new' %></li>
                <li><%= link_to 'Publisher', publishers_path + '/new' %></li>
              </ul>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Categories', categories_path %></li>
                <li><%= link_to 'Authors', authors_path %></li>
                <li><%= link_to 'Publishers', publishers_path %></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
	
	<header>
		<div class="row">
			<div class="container">
				<h1>Bookstore <small><%= @page_title ? @page_title : 'Welcome'%></small></h1>
			</div>
		</div>
	</header>

	<section>
		<div class="container">
			<div class="row">
				<div class="col-md-8">

          
          <% if flash[:notice] %>
              <div class="alert alert-success"><%= flash[:notice] %></div>
          <% end %>

          <% if flash[:alert] %>
              <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>



					<%= yield %>
				</div>
				<div class="col-md-4">
					<%= render 'partials/sidebar'%>
				</div>
			</div>
		</div>
	</section>
    
	<footer>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<p class="text-center">Copyright &copy; Margaryan Mher</p>
				</div>
			</div>
		</div>
	</footer>

  </body>
</html>
