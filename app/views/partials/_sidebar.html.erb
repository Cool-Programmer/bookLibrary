<% if params[:controller] == 'books' && params[:action] == 'index' || params[:action] == 'show' %>
	<div class="well">
		<ul class="list-group">
		<% @categories.each do |category| %>
			<li class="list-group-item list-unstyled"><%= link_to category.name, category_path(category.id) %></li>
		<% end %>
		</ul>
	</div>
<% end %>